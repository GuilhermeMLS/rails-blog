<div class="section">
  <%= simple_form_for @post do |f|  %>
    <div class="field">
      <div class="control">
        <%= f.input :title, label: 'Título', input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :content, label: 'Conteúdo', input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <%= f.submit 'Criar postagem', class: 'button is-primary black' %>
  <% end %>
</div>