<% content_for :page_title, @post.title %>

<section class="section">
  <div class="container">
    <div class="content">
      <nav class="level">
        <!-- left side-->
        <div class="level-left">
          <p class="level-item">
            <strong>Ações</strong>
          </p>
        </div>
        <!-- right side-->
        <div class="level-right">
          <p class="level-item" style="margin: 0 10px 0 0">
            <%= link_to "Editar", edit_post_path(@post), class: "button" %>
          </p>
          <p class="level-item">
            <%= link_to "Excluir", post_path(@post), method: :delete, data: { confirm: "Tem certeza que deseja excluir?" }, class: "button is-danger" %>
          </p>
        </div>
      </nav>
      <hr>
      <div class="content">
        <%= @post.content %>
      </div>
    </div>
  </div>
</section>

<section class="comments">

</section>